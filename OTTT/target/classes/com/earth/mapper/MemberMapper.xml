<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.earth.mapper.MemberMapper">
	<insert id="memberJoin">
  		insert into ottt_member values(#{memberId}, #{memberPw}, #{memberName})

  	</insert>
  	
  	  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  	
  		select count(*) from ottt_member where memberId = #{memberId}
  	
  	</select>
  	
  	      <!-- 로그인 -->
      <select id="memberLogin" resultType="com.earth.model.MemberVO">
      
         select memberId, memberName from ottt_member where memberId = #{memberId} and memberPw = #{memberPw}
      
      </select>
  	
  </mapper>